<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/GoogleIdText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Enter Google Sheet ID" />

    <EditText
        android:id="@+id/txtGoogleId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GoogleIdText" />

    <TextView
        android:id="@+id/LFileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtGoogleId"
        android:text="Enter File Name:" />
    <RelativeLayout
        android:id="@+id/FileSelectorLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LFileName">
        <EditText
            android:id="@+id/LFileInput"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             />

        <ImageView
            android:id="@+id/GET_FILE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/LFileInput"
            android:layout_alignRight="@+id/LFileInput"
            android:layout_alignTop="@+id/LFileInput"
            android:padding="5dp"
            app:srcCompat="?android:attr/actionModeWebSearchDrawable" />

    </RelativeLayout>


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FileSelectorLayout"
        android:entries="@array/array_name" />
    <Spinner
        android:id="@+id/updateTC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner"

        android:entries="@array/set_TC" />
    <Spinner
        android:id="@+id/updateDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updateTC"

        android:entries="@array/set_Day" />
    <Spinner
        android:id="@+id/updateProgram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updateDay"
        android:entries="@array/set_Pr" />
    <Button
        android:id="@+id/btnDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updateDay"
        android:layout_centerHorizontal="true"
        android:text="Download"
        android:drawableLeft="@android:drawable/stat_sys_download"/>

    <Button
        android:id="@+id/btn2"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnDownload"

        android:drawableLeft="@android:drawable/sym_action_call"
        android:backgroundTint="@color/primary_light"
        android:text="Start Calling" />

    <TextView
        android:id="@+id/Status"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn2"
        android:text="Calling Status" />

    <TextView
        android:id="@+id/UpdatedStatus1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Status" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UpdatedStatus1">

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/updateSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtStatus"

            android:entries="@array/set_status" />

        <EditText
            android:id="@+id/CallComment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/updateSpinner" />


        <Button
            android:id="@+id/UpdateCallStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CallComment"
            android:layout_centerHorizontal="true"
            android:text="Update Call Status" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/primary_light"
        android:weightSum="1">

        <Button
            android:id="@+id/CALLSTOP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@android:color/holo_red_light"
            android:text="STOP" />

        <Button
            android:id="@+id/REPORT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:layout_centerHorizontal="true"
            android:background="@android:color/holo_blue_light"
            android:text="REPORT" />
        <Button
            android:id="@+id/CALLCONTINUE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="0.5"

            android:background="@android:color/holo_green_light"
            android:text="CONTINUE" />
    </RelativeLayout>

</RelativeLayout>


